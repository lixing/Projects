<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="puzzle.game"
      android:versionCode="1"
      android:versionName="1.0">
       <uses-permission android:name="android.permission.INTERNET"/>
       
    <application android:icon="@drawable/logo" android:label="@string/app_name">
        <activity android:name=".FirstPage"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameMenu" android:screenOrientation="portrait"></activity>
         <activity android:name=".UserName" android:screenOrientation="portrait"></activity>
        <activity android:name=".IntroPage1" android:screenOrientation="portrait"></activity>
         <activity android:name=".IntroPage2" android:screenOrientation="portrait"></activity>
          <activity android:name=".Puzzles" android:screenOrientation="portrait"></activity>
        <activity android:name=".Ranking" android:screenOrientation="portrait"></activity>
        <activity android:name=".Hint" android:screenOrientation="portrait"></activity>
        <service android:name=".BackgroundMusic">
          <intent-filter>
              <action android:name="puzzle.game.Android.BackgroundMusic" />
              <category android:name="android.intent.category.default" />
          </intent-filter>
        </service>  
    </application>
</manifest> 